<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhiku.mapper.ArticleMapper">
    <resultMap id="BaseResultMap" type="com.zhiku.entity.Article">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="img" jdbcType="VARCHAR" property="img"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="author" jdbcType="INTEGER" property="author"/>
    </resultMap>
    <sql id="Base_Column_List">
        id,name,img,url,author
    </sql>
    <select id="getAllArticle" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"></include>
        from article
    </select>
</mapper>